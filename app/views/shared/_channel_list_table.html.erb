
<table class="table">
  <thead>
    <tr>
      <th>name</th>
      <th>public link</th>
      <th colspan="3">actions</th>
    </tr>
  </thead>

  <tbody>
    <% @channels.each do |channel| %>
      <tr>
        <td><%= channel.name %></td>
        <td><%= channel_name_url(name: channel.name) %></td>
        <td><%= link_to 'go to channel', channel_host_path(channel) %></td>
        <td><%= link_to 'edit', edit_user_channel_path(@user, channel) %></td>
        <td><%= link_to 'destroy', user_channel_path(@user, channel), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'create a channel', new_user_channel_path(@user) %>
