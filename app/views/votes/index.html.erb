<div class="container-fluid">
      <div class="row">
        <div class="col-5 offset-1">
          <p id="notice"><%= notice %></p>
          <h1>Votes</h1>
          <table id='vote-table' class="table table-hover">
            <thead class="thead-light">
              <tr>
                <th>Name</th>
                <th>Laptop</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @votes.each do |vote| %>
                <tr>
                  <td><%= vote.name %></td>
                  <td><%= vote.laptop %></td>
                  <td><%= link_to 'Show', vote %></td>
                  <td><%= link_to 'Edit', edit_vote_path(vote) %></td>
                  <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="col-6">
          <%#= pie_chart [["Yes", Vote.where(laptop: "yes").count], ["No", Vote.where(laptop: "no").count]], id:'polls'%> 
        </div>
      </div>

       <div class="row">
        <div class='col-11 offset-1 col-sm-4'>
          <h3>New vote</h3>
          <%= render 'form', vote: @vote %>
        </div>
      </div>
    </div>